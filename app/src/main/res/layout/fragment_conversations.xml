<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/conversations_first"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Беседа №1"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="true"
            android:focusable="true"
           />

    <TextView
            android:id="@+id/conversations_second"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Беседа №2"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/conversations_first"
    />

    <TextView
            android:id="@+id/conversations_third"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Беседа №3"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/conversations_second"
    />

    <TextView
            android:id="@+id/conversations_fourth"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Беседа №4"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/conversations_third"
    />

    <TextView
            android:id="@+id/conversations_fifth"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Беседа №5"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/conversations_fourth"
    />

</android.support.constraint.ConstraintLayout>